  function percentage1(){
    var num1 = parseInt(document.getElementById("Grade Num 1").value, 10);
    var den1 = parseInt(document.getElementById("Grade Den 1").value, 10);
    document.getElementById("percent1").innerHTML = (num1/den1).toFixed(2);
    return num1/den1;
  }
  function percentage2(){
    var num2 = parseInt(document.getElementById("Grade Num 2").value, 10);
    var den2 = parseInt(document.getElementById("Grade Den 2").value, 10);
    document.getElementById("percent2").innerHTML = (num2/den2).toFixed(2);
  }
  function percentage3(){
    var num3 = parseInt(document.getElementById("Grade Num 3").value, 10);
    var den3 = parseInt(document.getElementById("Grade Den 3").value, 10);
    document.getElementById("percent3").innerHTML = (num3/den3).toFixed(2);
  }
  function percentage4(){
    var num4 = parseInt(document.getElementById("Grade Num 4").value, 10);
    var den4 = parseInt(document.getElementById("Grade Den 4").value, 10);
    document.getElementById("percent4").innerHTML = (num4/den4).toFixed(2);
  }
  function mean(){
    document.getElementById("answer").innerHTML = (percentage1()+percentage2()+percentage3()+percentage4())/4;
  }
</script>
</div>
